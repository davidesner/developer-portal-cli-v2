{
    "name": "keboola/developer-portal-cli-v2",
    "description": "Command line client for Keboola Developer Portal",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Keboola",
            "email": "devel@keboola.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "symfony/console": "^3.2",
        "keboola/developer-portal-php-client": "^4.0",
        "symfony/process": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.1",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "phpstan/phpstan-shim": "^0.9.1",
        "keboola/coding-standard": "^4.0"        
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": { "Keboola\\DeveloperPortal\\": "src/Keboola/DeveloperPortal" }
    },
    "autoload-dev": {
        "psr-4": { "Keboola\\DeveloperPortal\\Test\\": "tests/Keboola/DeveloperPortal" }
    },
    "scripts": {
        "tests": "phpunit",
        "phpstan": "phpstan analyse --no-progress --level=max src tests -c phpstan.neon",
        "phpcs": "phpcs --extensions=php src tests",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-all --strict",
            "@build"
        ]
    }
}
